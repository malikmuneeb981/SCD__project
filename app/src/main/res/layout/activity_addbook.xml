<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addbook"
    android:orientation="vertical"
    android:background="@drawable/registeration_gradient">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilbookid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#F4511E"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:errorEnabled="true"
        android:layout_marginBottom="30dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BOOK ID" android:id="@+id/tilbookid3"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilbookname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#F4511E"
        android:layout_marginBottom="30dp"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:errorEnabled="true"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Name" android:id="@+id/tilbookname1"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilbooklocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#F4511E"
        app:counterEnabled="true"
        android:layout_marginBottom="30dp"
        app:counterMaxLength="30"
        app:errorEnabled="true"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Location" android:id="@+id/tilbooklocation1"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnaddbook"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_login"
        android:clickable="true"
        android:padding="16dp"
        android:text="ADD BOOK"
        android:textAllCaps="false"
        android:textColor="#f16f7d"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btnviewallbooks"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_login"
        android:clickable="true"
        android:padding="16dp"
        android:text="VIEW BOOKS"
        android:textAllCaps="false"
        android:textColor="#f16f7d"
        android:textSize="18sp" />

</LinearLayout>